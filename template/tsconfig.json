{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "types": [
      "node"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false
}
